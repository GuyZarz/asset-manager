# Asset Manager - Environment Variables Template
# Copy this file to .env and fill in with your actual values
# NEVER commit the .env file to git

# ============================================
# BACKEND (.NET) Configuration
# ============================================

# Database
# LOCAL DEVELOPMENT: Use these values
DATABASE_URL=postgresql://postgres:your_secure_password@localhost:5432/asset_manager_db
# NORTHFLANK PRODUCTION: Copy connection string from Northflank PostgreSQL addon
# Example: postgresql://northflank_user:generated_password@asset-manager-db.northflank.io:5432/asset_manager

DB_HOST=localhost
DB_PORT=5432
DB_NAME=asset_manager_db
DB_USER=postgres
DB_PASSWORD=your_secure_password

# JWT Authentication
# Generate a secure key: openssl rand -base64 32
JWT_SECRET=your_long_random_secret_key_here_min_32_chars_can_use_base64
JWT_EXPIRATION_MINUTES=60
JWT_REFRESH_EXPIRATION_DAYS=7

# API
API_PORT=5000
API_ENVIRONMENT=Development
# LOCAL: http://localhost:5173,http://localhost:3000
# PRODUCTION: https://your-frontend-url.vercel.app
CORS_ALLOWED_ORIGINS=http://localhost:5173,http://localhost:3000

# Email (optional - for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password
SMTP_FROM_EMAIL=noreply@assetmanager.com

# External APIs (optional)
ALPHA_VANTAGE_API_KEY=your_stock_api_key
COINGECKO_API_KEY=your_crypto_api_key

# ============================================
# FRONTEND (React) Configuration
# ============================================

VITE_API_BASE_URL=http://localhost:5000/api
VITE_APP_NAME=Asset Manager
VITE_ENVIRONMENT=development

# Third-party Services (optional)
VITE_SENTRY_DSN=
VITE_ANALYTICS_ID=
